<Page x:Class="ValorantGUI.GameLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ValorantGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameLogPage">

    <Grid>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="762,10,0,0" VerticalAlignment="Top" Click="BackButton_Click" Height="39" Width="auto"/>
        <Button x:Name="LogGameButton" Content="Log Game" HorizontalAlignment="Left" Margin="699,10,0,0" VerticalAlignment="Top" Click="LogGameButton_Click" Height="39" Width="auto"/>
        <ListBox x:Name="GamesListBox" HorizontalAlignment="Left" Height="305" Margin="23,56,0,0" VerticalAlignment="Top" Width="318" SelectionChanged="OnSelectionChanged"/>
        <Label x:Name="ResultLabel" Content="Result: -" HorizontalAlignment="Left" Height="30" Margin="360,61,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="ScoreLabel" Content="Score: -" HorizontalAlignment="Left" Height="30" Margin="360,96,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="KillsLabel" Content="Kills: -" HorizontalAlignment="Left" Height="30" Margin="360,131,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="DeathsLabel" Content="Deaths: -" HorizontalAlignment="Left" Height="30" Margin="360,161,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="AssistsLabel" Content="Assists: -" HorizontalAlignment="Left" Height="30" Margin="360,196,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="AdrLabel" Content="ADR: -" HorizontalAlignment="Left" Height="30" Margin="360,231,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="KDLabel" Content="K/D: -" HorizontalAlignment="Left" Height="30" Margin="360,266,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="AgentLabel" Content="Agent: -" HorizontalAlignment="Left" Height="30" Margin="360,296,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="MapLabel" Content="Map: -" HorizontalAlignment="Left" Height="30" Margin="360,331,0,0" VerticalAlignment="Top" Width="145"/>

        <Label x:Name="TotalKDLabel" Content="Overall K/D: -" HorizontalAlignment="Left" Height="30" Margin="559,113,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="TotalWinLossLabel" Content="Overall Win Loss: -" HorizontalAlignment="Left" Height="30" Margin="559,148,0,0" VerticalAlignment="Top" Width="145"/>

    </Grid>
</Page>
